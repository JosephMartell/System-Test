<Window x:Class="System_Test_Studio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_Test_Studio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2">
        </Menu>
        <DockPanel LastChildFill="False" Margin="0,0,0,32" Grid.ColumnSpan="2">
            <Grid Height="100px" DockPanel.Dock="Bottom" Background="Black"/>
            <Grid Height="100px" DockPanel.Dock="Bottom" Background="Gray" />
            <ListView Width="150" DockPanel.Dock="Left">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
        <StatusBar Margin="0,407,0,0" Background="Blue" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
